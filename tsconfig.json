{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "target": "es5",
    "allowJs": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src", // Base URL per risolvere i percorsi
    "paths": {
      "@components/*": ["./components/*"] // Alias per i componenti
    }
  }
}